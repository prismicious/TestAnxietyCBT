<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E8E9F3">
    <RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="false"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="false"
        android:layout_marginTop="10dp"
        android:text="Activity overview"
        android:textColor="#272635"
        android:textSize="24dp"
        android:textStyle="bold"
        app:fontFamily="@font/lato" />


    <com.google.android.material.card.MaterialCardView
        android:id="@+id/Card"
        style="@style/overviewCard"

        android:layout_centerHorizontal="true"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="60dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="8dp"
        app:cardCornerRadius="12dp"
        app:cardElevation="2dp"
        app:strokeWidth="8dp">
    <RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">

        <TextView
            android:id="@+id/text1"
            style="@style/layoutTheme"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="false"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/lato"
            android:text="@string/decata1"
            android:paddingLeft="20dp"/>
        <TextView
            style="@style/overviewText"
            android:id="@+id/input1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/text1"
            android:paddingLeft="20dp"
            android:layout_marginTop="10dp"
            android:layout_gravity="center_horizontal"
            android:fontFamily="@font/lato"
            android:text="Test" />
    </RelativeLayout>
    </com.google.android.material.card.MaterialCardView>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="90dp"
        android:layout_toLeftOf="@+id/Card"
        app:srcCompat="@drawable/ic_check_circle_black_24dp">
    </ImageView>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="250dp"
        android:layout_toLeftOf="@+id/Card"
        app:srcCompat="@drawable/ic_check_circle_black_24dp">
    </ImageView>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="410dp"
        android:layout_toLeftOf="@+id/Card"
        app:srcCompat="@drawable/ic_check_circle_black_24dp">
    </ImageView>
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="560dp"
        android:layout_toLeftOf="@+id/Card"
        app:srcCompat="@drawable/ic_check_circle_black_24dp">
    </ImageView>
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/Card2"
        android:layout_below="@+id/Card"
        style="@style/overviewCard"
        android:layout_centerInParent="true"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="8dp"
        app:cardCornerRadius="12dp"
        app:cardElevation="2dp"
        app:strokeWidth="8dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <TextView
            android:id="@+id/text2"
            style="@style/layoutTheme"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="false"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/lato"
            android:text="@string/decata2"
            android:paddingLeft="20dp"/>
        <TextView
            style="@style/overviewText"
            android:id="@+id/input2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/text2"
            android:paddingLeft="20dp"
            android:layout_marginTop="10dp"
            android:layout_gravity="center_horizontal"
            android:fontFamily="@font/lato"
            android:text="Test" />
        </RelativeLayout>
    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/Card3"
        android:layout_below="@+id/Card2"
        style="@style/overviewCard"
        android:layout_centerInParent="true"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="8dp"
        app:cardCornerRadius="12dp"
        app:cardElevation="2dp"
        app:strokeWidth="8dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/text3"
                style="@style/layoutTheme"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="false"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/lato"
                android:text="@string/decata3"
                android:paddingLeft="20dp"/>

            <TextView
                style="@style/overviewText"
                android:id="@+id/input3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@id/text3"
                android:paddingLeft="20dp"
                android:layout_marginTop="10dp"
                android:layout_gravity="center_horizontal"
                android:fontFamily="@font/lato"
                android:text="Test" />
        </RelativeLayout>
    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/Card4"
        android:layout_below="@+id/Card3"
        style="@style/overviewCard"
        android:layout_centerInParent="true"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="8dp"
        app:cardCornerRadius="12dp"
        app:cardElevation="2dp"
        app:strokeWidth="8dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/text4"
                style="@style/layoutTheme"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="false"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/lato"
                android:text="@string/decata4"
                android:paddingLeft="20dp"/>
            <TextView
                style="@style/overviewText"
                android:id="@+id/input4"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@id/text4"
                android:paddingLeft="20dp"
                android:layout_marginTop="10dp"
                android:layout_gravity="center_horizontal"
                android:fontFamily="@font/lato"
                android:text="Test" />
        </RelativeLayout>
    </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.button.MaterialButton
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:layout_below="@+id/Card4"
            android:layout_centerInParent="true"
            android:background="@color/colorPrimary"
            android:onClick="onClick_decata4"
            android:text="Next"
            android:textStyle="bold"
            android:typeface="normal"
            app:backgroundTint="@color/colorPrimary"
            app:cornerRadius="8dp" />
</RelativeLayout>
</ScrollView>